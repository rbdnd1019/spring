<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.inadang.mapper.OrderMapper">
  	<select id="getList" resultType="order">
		SELECT * FROM tbl_order WHERE ono IS NOT NULL
  	</select>
  	
  	<select id="get" resultType="order">
  		SELECT * FROM tbl_order WHERE ono = #{ono}
  	</select>
  	
<!--   	<insert id="insert">
		INSERT INTO tbl_order (ono, id, name)
		VALUES(concat('ORD',(TO_CHAR(sysdate, 'yyymmddhh24mmss'))), #{id}, #{name})
  	</insert> -->
  	<insert id="insert">
  		<selectKey order="BEFORE" resultType="string" keyProperty="ono">
  		SELECT concat('ORD',(TO_CHAR(sysdate, 'yyymmddhh24mmss'))) FROM DUAL
  		</selectKey>
  		<![CDATA[
			INSERT INTO tbl_order (ono, id, name, sno) VALUES (
			    #{ono}, 
			    #{id},    
			    (
			    SELECT m.name
			    from tbl_menu m
			    JOIN tbl_cart c
			    USING(mno)
			    WHERE id = #{id}
				),
			    (
			    SELECT m.sno
			    from tbl_menu m
			    JOIN tbl_cart c
			    USING(mno)
			    WHERE id = #{id}
				)
			)
		]]>
  	</insert>
  	
  	<delete id="delete">
  		DELETE tbl_order WHERE ono = #{ono}
  	</delete>
  	
  	<!-- 주문취소 -->
  	<update id="cancel"> 
  		UPDATE tbl_order set
  		status = #{status}
  		WHERE ono = #{ono} 
  	</update>
  	
  	<!-- 총가격 -->
  	<update id="updateAmount">
  	UPDATE tbl_order SET
	AMOUNT = (
	SELECT sum(price)
	FROM tbl_orderMenu
	where ono = #{ono}
	)where ono = #{ono}
  	</update>
  	
  </mapper>